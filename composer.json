{
    "name": "zakspov/flexpress-theme",
    "description": "FlexPress WordPress Theme - Premium theme for content creators",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Zak Ozbourne",
            "email": "zak@zakozbourne.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php wp-content/themes/flexpress/",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php wp-content/themes/flexpress/",
        "phpcs-report": "phpcs --standard=WordPress --extensions=php --report=summary wp-content/themes/flexpress/",
        "lint": "composer run phpcs",
        "fix": "composer run phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
