<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="FlexPress WordPress Standards" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/PHPCSStandards/PHP_CodeSniffer/master/phpcs.xsd">

    <description>WordPress coding standards for FlexPress theme development</description>

    <file>.</file>

    <!-- Exclude vendor and dependencies -->
    <exclude-pattern>**/vendor/*</exclude-pattern>
    <exclude-pattern>**/node_modules/*</exclude-pattern>
    <exclude-pattern>**/assets/js/*.min.js</exclude-pattern>
    <exclude-pattern>**/assets/css/*.min.css</exclude-pattern>

    <!-- Check up to 8 files simultaneously -->
    <arg name="parallel" value="8"/>

    <!-- Include WordPress-Extra standard -->
    <rule ref="WordPress-Extra"/>

    <!-- WordPress Documentation standards -->
    <rule ref="WordPress-Docs"/>

    <!-- Set minimum WordPress version -->
    <config name="minimum_wp_version" value="6.0"/>

    <!-- PHP Compatibility check -->
    <config name="testVersion" value="7.4-"/>
    <rule ref="PHPCompatibilityWP">
        <include-pattern>*\.php</include-pattern>
    </rule>

    <!-- Text domain enforcement -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="flexpress"/>
            </property>
        </properties>
    </rule>

    <!-- Prefix enforcement for globals -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="flexpress_"/>
                <element value="FlexPress"/>
                <element value="FLEXPRESS_"/>
            </property>
        </properties>
    </rule>

    <!-- Flag TODO comments -->
    <rule ref="Generic.Commenting.Todo.CommentFound">
        <message>Please review this TODO comment: %s</message>
        <severity>3</severity>
    </rule>

    <!-- Relaxed rules for theme development -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
    </rule>

</ruleset> 